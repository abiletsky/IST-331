<body style="margin: 0px;">
<div id="scope" style="background-color: Black; height: 100%; width: 800px;"></div>

    {% for flight in flights %}
    <div id="flight_{{ flight.getId() }}" class="flight" data-startTime="{{ flight.getStartTime() }}"
         data-heading="{{ flight.getHeading() }}" data-altitude="{{ flight.getAltitude() }}"
         data-groundSpeed="{{ flight.getGroundSpeed() }}" data-destination="{{ flight.getDestination() }}"
         data-aircraft="{{ flight.getAircraft() }}"
         style="visibility: visible; top: {{ flight.getStartingY() }}; left: {{ flight.getStartingX() }};">
        V
        <div style="position: relative; top: -40px; left: 18px; font-size: 10px; display: block; width: 100px; color: white;">
            <span id="data-block-1">Lorem Ipsum</span><br/>
            <span id="data-block-2" class="hidden" style="position: absolute; top: -100px; visibility: hidden;">Lorem Ipsum</span>
            <span id="data-block-2" style="visibility: visible;">Lorem Ipsum</span>
        </div>

    </div>
    {% endfor %}

<div style="position: absolute;  left: 810px; top: 5px;">
    <span style="border: 1px solid black; padding: 1px 4px 1px 4px;" id="timer">00:00:00</span>
    <select id="speed" onchange="changeRate()">
        <option value="1">1x</option>
        <option value="2">2x</option>
        <option value="4">4x</option>
        <option value="8">8x</option>
    </select>

    <button onclick="startSimulation()">Start Simulation</button>
</div>
