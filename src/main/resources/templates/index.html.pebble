<html>
<head>
    <style>
    div.flight {
        background-color: transparent;
        width: 12px;
        height: 12px;
        position: absolute;
        color: white;
        font-family: sans-serif;
        font-size: 12px;
    }

    .space{
width: 200px;
border-radius: 10px;
margin: 0px 0px 0px 0px;
background-color: yellow;
}
.backspace{
width: 100px;
border-radius: 10px;
margin: 10px 10px 10px 10px;
background-color: yellow;
}
.enter{
width: 100px;
border-radius: 10px;
margin: 0px 0px 0px 0px;
background-color: red;
}
.clear{
width: 100px;
border-radius: 10px;
margin: 10px 10px 10px 10px;
background-color: yellow;
}
.Zero{
margin-left: 120px
}
table {
    border: solid 2px black;
}

table.th {
    padding: 5px;
}
div.KeyboardInput{
    margin:10px;
    width: 200px;
}
div.flightsearch{
        margin:10px;
        border: solid 1px black;
        padding: 15px 15px;
        display: inline-block;
        margin-left: 55%;

    }

.btn{
 margin: 9px;
 width: 30px;
 height: 30px;
 background-color: aliceblue;

}
.Zero{
margin: 5px;
 width: 30px;
 height: 30px;

    margin-left: 165px;
    background-color: aliceblue;
}
.Special{

margin: 5px;
 width: 100px;
 height: 40px;
 background-color: rgb(16, 219, 16);
}
.Special2{
margin: 5px 6px;
 width: 40px;
 height: 40px;
 background-color: rgb(16, 219, 16);
 font-size: 10px;
}
.container{
padding-bottom: 200px;
box-sizing: border-box;
background-color: lightgray;
}

.data-block-hidden {
    position: absolute;
    top: -100px;
    visibility: hidden;
}
    </style>
    <script src="js/index.js"></script>
</head>
<body style="margin: 0px;">
<div id="scope" style="background-color: Black; height: 800px; width: 800px;"></div>
    <div id="phl" style="background-color: rgb(118, 116, 116); position: absolute; top: 530px; left: 310px; width: 14px; height: 14px;">

    </div>

    {% for flight in flights %}
        {% set tailNumber = flight.getTailNumber() %}

    <div id="flight_{{ flight.getId() }}" class="flight" data-startTime="{{ flight.getStartTime() }}"
         data-heading="{{ flight.getHeading() }}" data-altitude="{{ flight.getAltitude() }}"
         data-groundSpeed="{{ flight.getGroundSpeed() }}" data-destination="{{ flight.getDestination() }}"
         data-aircraft="{{ flight.getAircraft() }}" data-endPhl="{{ flight.getEndPhl() }}"
         style="visibility: visible; top: {{ flight.getStartingY() }}; left: {{ flight.getStartingX() }};" onclick="showFlightData('flight_{{ flight.getId() }}')" name="{{ tailNumber | slice(tailNumber|length - 2, tailNumber|length) }}">
        V
        <div style="position: relative; top: -40px; left: 18px; font-size: 10px; display: block; width: 100px; color: white;">
            <span>{{ flight.getTailNumber() }}</span><br/>
            <span name="data-block-1">
                <span name="dbAltitude">{{ flight.getAltitude() }}</span>&nbsp;&nbsp;<span name="dbGroundSpeed">{{ flight.getGroundSpeed() }}</span>
            </span>
            <span name="data-block-2" class="data-block-hidden">
                <p name="dbDestination">{{ flight.getDestination() }}</p>&nbsp;<p name="dbAircraft">{{ flight.getAircraft() }}</p>
            </span>
        </div>
    </div>
    {% endfor %}

<div style="position: absolute;  left: 810px; top: 5px;">
    <span style="border: 1px solid black; padding: 1px 4px 1px 4px;" id="timer"><label id="minutes">00</label>:<label id="seconds">00</label></span>
    <select id="speed" onchange="changeRate()">
        <option value="1">1x</option>
        <option value="2">2x</option>
        <option value="4">4x</option>
        <option value="10">10x</option>
    </select>

    <button onclick="startSimulation()">Start Simulation</button>
</div>

<div class="container2" style="width: 600px; height: 300px; position: absolute; left:55%; top: 30px">
    <table border="1" cellspacing="0px" cellpadding="1px" width="85%">
        <tr>
            <td id="fsTailNumber"></td>
            <td id="fsSquawk">SQUAWK</td>
            <td id="fsDepAirport">Dep. Airport</td>
            <td id="fsCompleteRoute">Complete Route</td>
        </tr>
        <tr>
            <td id="fsAircraft"></td>
            <td id="fsProposedTime"></td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td id="fsFlightPlanId">Flight Plan ID</td>
            <td id="fsAltitude"></td>
            <td></td>
            <td id="fsRemarks">Remarks</td>
        </tr>
    </table>
</div>
<div class="flightsearch" style="width: 500px; height: 50px; position: absolute; left:0%; top: 150px;">
    <label>Flight Search </label>
    <input name="flightsearch" placeholder="Search Flights" type="text">

    <select name="Flights">
        <option value="--">Select flight</option>
        <option value="Sprint-A340-PHL-to-AMD">A340-PHL-AMD</option>
        <option value="American-Airlines-AI345-PHL-to-ILN">AI345-PHL-ILN</option>
    </select>
    <br/>
    <button type="search" name="submit">Search</button>
</div>
<div class="container" style="width: 570px; height: 426px; position: absolute; left:55%; top: 330px">
    <div class="row-one">
        <button class="Special2">M1</button>
        <button class="Special2">M2</button>
        <button class="Special2">M3</button>
        <button class="Special2">M4</button>
        <button class="Special2">CON</button>
        <button class="Special2">MAP</button>
        <button class="Special2">M5</button>
        <button class="Special2">M6</button>
        <button class="Special2">M7</button>
        <button class="Special2">M8</button>
    </div>
    <div class="row-two">
        <button class="Special2">M9</button>
        <button class="Special2">M10</button>
        <button class="Special2">M11</button>
        <button class="Special2">M12</button>
        <button class="Special2">TRK</button>
        <button class="Special2">USR</button>
        <button class="Special2">M13</button>
        <button class="Special2">M14</button>
        <button class="Special2">M15</button>
        <button class="Special2">M16</button>
    </div>
    <div class="row-second">
        <button class="clear">CLEAR</button>
        <button class="backspace">BACKSPACE</button>
        <button class="space">SPACE</button>
        <button class="enter" onclick="parseInput()">ENTER</button>
    </div>
    <div class="row-third">
        <button class="Special2">INIT CTRL</button>
        <button class="Special2">TRK RPOS</button>
        <button class="Special2">TRK SUSP</button>
        <button class="Special2">TEAM CTRL</button>
        <button class="Special2">HND Off</button>
        <button class="Special2">FLT Data</button>
        <button class="Special2">MULTI FUNC</button>
        <button class="Special2">F8</button>
        <button class="Special2">M7</button>
        <button class="Special2">M8</button>
    </div>
    <div class="row-six">
        <button class="btn" onclick="myfunction('A')">A</button>
        <button class="btn">B</button>
        <button class="btn">C</button>
        <button class="btn">D</button>
        <button class="btn">E</button>
        <button class="btn">F</button>
        <button class="btn">G</button>
        <button class="btn">1</button>
        <button class="btn">2</button>
        <button class="btn">3</button>
    </div>
    <div class="row-seven">
        <button class="btn">H</button>
        <button class="btn">I</button>
        <button class="btn">J</button>
        <button class="btn">K</button>
        <button class="btn">L</button>
        <button class="btn">M</button>
        <button class="btn">N</button>
        <button class="btn">4</button>
        <button class="btn">5</button>
        <button class="btn">6</button>
    </div>
    <div class="row-eight">
        <button class="btn">O</button>
        <button class="btn">P</button>
        <button class="btn">Q</button>
        <button class="btn">R</button>
        <button class="btn">S</button>
        <button class="btn">T</button>
        <button class="btn">U</button>
        <button class="btn">7</button>
        <button class="btn">8</button>
        <button class="btn">9</button>
    </div>
    <div class="row-nine">
        <button class="btn">V</button>
        <button class="btn">W</button>
        <button class="btn">X</button>
        <button class="btn">Y</button>
        <button class="btn">Z</button>

        <button class="Zero">0</button>

    </div>
</div>
<div class="KeybordInput" style="position: absolute; left:60%; top: 250px;">
    <input name="KeyboardInput" id="KeyboardInput"  style="width: 200px;" type="text">
</div>
</body>
</html>
