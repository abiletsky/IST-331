<table>
    <thead>
        <th style="width: 50px;">ID</td>
        <th style="width: 100px;">Name</td>
        <th style="width: 100px;">Color</td>
    </thead>
    {% for fruit in fruits %}
        <tr style="text-align: center;">
            <td style="width: 50px;">{{ fruit.getId() }}</td>
            <td style="width: 100px;">{{ fruit.getName() }}</td>
            <td style="width: 100px;">{{ fruit.getColor() }}</td>
        </tr>
    {% endfor %}
</table>
